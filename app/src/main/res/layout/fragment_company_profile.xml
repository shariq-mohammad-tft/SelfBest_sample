<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollviewatProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/detail_page_header_color"
        app:layout_constraintTop_toBottomOf="parent"
        tools:context=".ui.fragments.profile.ProfileFragment">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/user_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/circular_event_bg"
            android:padding="3dp"
            android:src="@drawable/edit_profile_icon"
            app:layout_constraintBottom_toBottomOf="@id/user_icon"
            app:layout_constraintEnd_toEndOf="@id/user_icon" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_medium_new"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_icon" />

        <TextView
            android:id="@+id/user_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_medium_new"
            android:text="Admin"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_name" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_profession">

            <LinearLayout
                android:id="@+id/company_profile_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/organisation_border"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/company_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/left_organisation_round"
                    android:fontFamily="@font/roboto_medium_new"
                    android:gravity="center"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="10dp"
                    android:text="Company"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/config_tools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium_new"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:text="Config. tools "
                    android:textColor="#707070" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/personal_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/company_profile_container">

                <TextView
                    android:id="@+id/company_detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium_new"
                    android:text="Edit your Company Details"
                    android:textColor="@color/tool_bar_color"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:id="@+id/company_detail_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:background="@drawable/profile_bg_card"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_detail_text">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_new"
                        android:text="Company name"
                        android:textColor="@color/privacy_bg_colour"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/company_name"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/upcoming_event_bg"
                        android:letterSpacing="0.08"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:textColor="#3e3e3e"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_medium_new"
                        android:text="Company website"
                        android:textColor="@color/privacy_bg_colour"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/company_website"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/upcoming_event_bg"
                        android:letterSpacing="0.08"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_medium_new"
                        android:text="Company Linkedin"
                        android:textColor="@color/privacy_bg_colour"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/linkedin"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/upcoming_event_bg"
                        android:letterSpacing="0.08"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/red"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_medium_new"
                        android:text="Number of Employees"
                        android:textColor="@color/privacy_bg_colour"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/no_of_employees"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/upcoming_event_bg"
                        android:inputType="number"
                        android:letterSpacing="0.08"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/red"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_medium_new"
                        android:text="Company domain"
                        android:textColor="@color/privacy_bg_colour"
                        android:textSize="12dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/upcoming_event_bg">
                        <Spinner
                            android:id="@+id/domain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_medium_new"
                        android:text="Technology skills"
                        android:textColor="@color/privacy_bg_colour"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/skill_added"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/upcoming_event_bg"
                        android:letterSpacing="0.08"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/red"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_medium_new"
                        android:text="Register employee database"
                        android:textColor="@color/privacy_bg_colour"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/download_db"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download Excel"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:background="@drawable/get_started_btn_bg"/>

                        <TextView
                            android:id="@+id/upload_db"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload"
                            android:textSize="12dp"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/white"
                            android:background="@drawable/get_started_btn_bg"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/account_setting_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/profile_bg_card"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_detail_container">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_new"
                        android:text="Account Setting"
                        android:textColor="@color/privacy_bg_colour"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium_new"
                            android:gravity="start"
                            android:text="Deactivate account temporarily" />

                        <TextView
                            android:id="@+id/daty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/profile_action_btn_bg"
                            android:gravity="end"
                            android:text="Yes"
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium_new"
                            android:gravity="start"
                            android:text="Delete account permanently" />

                        <TextView
                            android:id="@+id/dapy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/profile_action_btn_bg"
                            android:gravity="end"
                            android:text="Yes"
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium_new"
                            android:gravity="start"
                            android:text="Delete data" />

                        <TextView
                            android:id="@+id/ddy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/profile_action_btn_bg"
                            android:gravity="end"
                            android:text="Yes"
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/account_setting_container">

                    <TextView
                        android:id="@+id/cancel_profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="start|center_vertical"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/save_profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/done_bg"
                        android:gravity="center"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/config_tools_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginTop="40dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/company_profile_container">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Collaboration Tools"
                    android:textColor="#1D71D4"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/bots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/profile_bg_card"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <RadioButton
                        android:id="@+id/slack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/icon_slack"
                        android:drawablePadding="5dp"
                        style="@style/CustomRadioButtonStyle"
                        android:text="Slack"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/google_chats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/icon_chats"
                        android:drawablePadding="8dp"
                        style="@style/CustomRadioButtonStyle"
                        android:text="Google Chats"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/ms_teams"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/icon_ms_teams"
                        android:drawablePadding="5dp"
                        style="@style/CustomRadioButtonStyle"
                        android:text="MS Teams"
                        android:textSize="14sp" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Calendar"
                    android:layout_marginTop="20dp"
                    android:textColor="#1D71D4"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/calendars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/profile_bg_card"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <RadioButton
                        android:id="@+id/google_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/google_cal_ic"
                        android:drawablePadding="5dp"
                        style="@style/CustomRadioButtonStyle"
                        android:text="Google Calendar"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/microsoft_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_microsoft_cal"
                        android:drawablePadding="5dp"
                        style="@style/CustomRadioButtonStyle"
                        android:text="Microsoft Calendar"
                        android:textSize="14sp" />

                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Manage workden / solution point"
                    android:textColor="#1D71D4"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/profile_bg_card"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <CheckBox
                        android:id="@+id/work_den"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_work_den"
                        android:drawablePadding="5dp"
                        style="@style/CustomCheckBoxStyle"
                        android:text="Work den"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/solution_pt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/icon_solution_pt"
                        android:drawablePadding="5dp"
                        style="@style/CustomCheckBoxStyle"
                        android:text="Solution point"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/account_setting_container">

                    <TextView
                        android:id="@+id/cancel_collab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="start|center_vertical"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/save_collab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/done_bg"
                        android:gravity="center"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
