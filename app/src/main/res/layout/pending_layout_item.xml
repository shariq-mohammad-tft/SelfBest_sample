<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/requestContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/user_management_card_bg"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:backgroundTint="#F8F8F8"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        android:outlineSpotShadowColor="#CBCBCB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gmail_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/ic_icons8_gmail"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/gmail_id"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="@font/roboto"
                    android:text="mohdshariq595@gmail.com" />

                <ImageView
                    android:id="@+id/copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_copy"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linked_in_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_icons8_linkedin" />

                <TextView
                    android:id="@+id/linkedin_id"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="1dp"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto"
                    android:text="mohdshariq595__" />

                <ImageView
                    android:id="@+id/copy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_copy"
                    />
            </LinearLayout>

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="horizontal"-->
            <!--                android:layout_marginTop="10dp">-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Role"
                android:textColor="@color/tool_bar_color"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_medium_new"
                android:layout_weight="1"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:background="@drawable/upcoming_event_bg">
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/spinnerItemStyle"
                    android:entries="@array/Role_Spinner"/>
            </FrameLayout>
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Action"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:textSize="12sp"-->
<!--                android:textColor="@color/tool_bar_color"-->
<!--                android:fontFamily="@font/roboto_medium"-->
<!--                android:layout_weight="1"/>-->

            <!--            </LinearLayout>-->



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <!--                <FrameLayout-->
                <!--                    android:id="@+id/spinner_container"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="30dp"-->
                <!--                    android:layout_marginTop="2dp"-->
                <!--                    android:layout_marginEnd="55dp"-->
                <!--                    android:layout_marginBottom="2dp"-->
                <!--                    android:background="#CBCBCB"-->
                <!--                    android:paddingVertical="2dp"-->
                <!--                    android:paddingStart="50dp"-->
                <!--                    android:layout_weight="25">-->


                <!--                </FrameLayout>-->

                <TextView
                    android:id="@+id/accept"
                    android:text="Accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/accept_bt_bg"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/reject"
                    android:text="Reject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingVertical="8dp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/reject_btn_bg"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="90dp"
        android:button="@drawable/distraction_checkbox"
        android:checked="false"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>