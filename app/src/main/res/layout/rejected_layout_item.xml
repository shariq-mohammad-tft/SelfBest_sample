<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/requestContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/user_management_card_bg"
        android:outlineSpotShadowColor="#CBCBCB"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gmail_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/ic_icons8_gmail"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/gmail_id"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="50dp"
                    android:textColor="#707070"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center_vertical"
                    android:text="mohdshariq595@gmail.com"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linked_in_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_icons8_linkedin" />

                <TextView
                    android:id="@+id/linkedin_id"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="1dp"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto"
                    android:text="mohdshariq595__" />

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium_new"
                android:text="Role"
                android:textColor="@color/tool_bar_color"
                android:textSize="12sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:paddingVertical="7dp"
                android:background="@drawable/upcoming_event_bg">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/Role_Spinner"
                    android:theme="@style/spinnerItemStyle" />


            </FrameLayout>

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:layout_weight="1"-->
<!--                android:fontFamily="@font/roboto_medium"-->
<!--                android:text="Action"-->
<!--                android:textColor="@color/tool_bar_color"-->
<!--                android:textSize="12sp" />-->


            <TextView
                android:id="@+id/accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/accept_bt_bg"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="Accept"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="90dp"
        android:button="@drawable/distraction_checkbox"
        android:checked="false"
        android:clickable="false"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>